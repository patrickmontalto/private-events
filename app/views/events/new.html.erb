<h2>Event</h2>
<h3>Create</h3>

<%= form_for @event do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :datetime, "Time and Date" %>
		<%= f.datetime_local_field :datetime %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
<% end %>